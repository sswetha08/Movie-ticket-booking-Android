<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.Login.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USERNAME: "
        android:id="@+id/userp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passp"
        android:text="PASSWORD: "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/userp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/but"
        android:layout_below="@+id/passp"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="20dp"
        android:onClick="submit"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORGOT PASSWORD?"
        android:id="@+id/fp"
        android:layout_below="@+id/but"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="20dp"
        android:onClick="forpass"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/sign"
        android:layout_below="@+id/fp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:onClick="makeacc"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edpass"
        android:text=""
        android:textColor="@android:color/black"
        android:inputType="textPassword"
        android:layout_below="@+id/userp"
        android:layout_toRightOf="@id/passp"
        android:layout_marginLeft="24dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/eduser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:inputType="text"
        android:layout_marginTop="180dp"
        android:layout_toRightOf="@id/userp"
        android:layout_marginLeft="24dp"
        android:textSize="20dp" />

</RelativeLayout>

