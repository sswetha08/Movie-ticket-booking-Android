<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3b444b"
            android:orientation="vertical">

            <TextView
                android:id="@+id/movies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="16dp"
                android:text="Movies"
                android:textStyle="italic"
               android:textSize="32dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/the_mummy"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/movies"
                android:id="@+id/the_mummy"
                android:onClick="watch"
                android:paddingTop="16dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:layout_below="@id/the_mummy"
                android:id="@+id/hindi"
                android:src="@drawable/hindi"
                android:onClick="watch"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:onClick="watch"
                android:layout_below="@id/hindi"
                android:id="@+id/raabta"
                android:src="@drawable/raabta" />

            <ImageButton
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:layout_below="@id/raabta"
                android:id="@+id/baahubali"
                android:src="@drawable/baahubali"
                android:onClick="watch"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/baahubali"
                android:id="@+id/sathriyan"
                android:onClick="watch"
                android:src="@drawable/sathriyan" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>