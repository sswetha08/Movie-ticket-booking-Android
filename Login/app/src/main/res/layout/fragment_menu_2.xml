<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/theatres"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textSize="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:text="Cinemas"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:id="@+id/textView"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pvr Theatres"
        android:id="@+id/pvr"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:textSize="16dp"
        android:onClick="theatre"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INOX Cinemas"
        android:layout_marginLeft="16dp"
        android:id="@+id/inox"
        android:layout_marginTop="24dp"
        android:textSize="16dp"
        android:onClick="theatre"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gopalan Cinemas"
        android:layout_marginLeft="16dp"
        android:id="@+id/gopalan"
        android:layout_marginTop="24dp"
        android:textSize="16dp"
        android:onClick="theatre"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phoenix theatres"
        android:layout_marginLeft="16dp"
        android:id="@+id/phoenix"
        android:layout_marginTop="24dp"
        android:textSize="16dp"
        android:onClick="theatre"

        />


</LinearLayout>